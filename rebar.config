%-*-Mode:erlang;coding:utf-8;tab-width:4;c-basic-offset:4;indent-tabs-mode:()-*-
% ex: set ft=erlang fenc=utf-8 sts=4 ts=4 sw=4 et:

{deps,
 [{trie, ".*",
   {git, "git://github.com/okeuday/trie", {branch, "master"}}},
  {quickrand, ".*",
   {git, "git://github.com/okeuday/quickrand", {branch, "master"}}},
  {reltool_util, ".*",
   {git, "git://github.com/okeuday/reltool_util", {branch, "master"}}},
  {cpg, ".*",
   {git, "git://github.com/okeuday/cpg", {branch, "master"}}},
  {pqueue, ".*",
   {git, "git://github.com/okeuday/pqueue", {branch, "master"}}},
  {key2value, ".*",
   {git, "git://github.com/okeuday/key2value", {branch, "master"}}},
  {uuid, ".*",
   {git, "git://github.com/okeuday/uuid", {branch, "master"}}},
  {combonodefinder, ".*",
   {git, "git://github.com/okeuday/combonodefinder", {branch, "master"}}},
  {dynamic_compile, ".*",
   {git, "git://github.com/okeuday/dynamic_compile", {branch, "master"}}}]}.

{erl_opts,
 [debug_info,
  warnings_as_errors,
  strict_validation,
  warn_bif_clash,
  warn_deprecated_function,
  warn_export_all,
  warn_export_vars,
  warn_exported_vars,
  warn_obsolete_guard,
  warn_shadow_vars,
  warn_unused_import,
  warn_unused_function,
  warn_unused_record,
  warn_unused_vars]}.
{xref_checks,
 [exports_not_used,
  undefined_function_calls]}.
{xref_warnings, true}.
{cover_enabled, true}.
{cover_print_enabled, true}.
{cover_export_enabled, true}.

