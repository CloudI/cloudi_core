%-*-Mode:erlang;coding:utf-8;tab-width:4;c-basic-offset:4;indent-tabs-mode:()-*-
% ex: set ft=erlang fenc=utf-8 sts=4 ts=4 sw=4 et:

{deps,
 [{cpg, ".*",
   {git, "https://github.com/okeuday/cpg.git",
    {tag, "v1.3.2"}}},
  {uuid, ".*",
   {git, "https://github.com/okeuday/uuid.git",
    {tag, "v1.3.2"}}},
  {reltool_util, ".*",
   {git, "https://github.com/okeuday/reltool_util.git",
    {tag, "v1.3.2"}}},
  {trie, ".*",
   {git, "https://github.com/okeuday/trie.git",
    {tag, "v1.3.2"}}},
  {quickrand, ".*",
   {git, "https://github.com/okeuday/quickrand.git",
    {tag, "v1.3.2"}}},
  {pqueue, ".*",
   {git, "https://github.com/okeuday/pqueue.git",
    {tag, "v1.3.2"}}},
  {key2value, ".*",
   {git, "https://github.com/okeuday/key2value.git",
    {tag, "v1.3.2"}}},
  {nodefinder, ".*",
   {git, "https://github.com/okeuday/nodefinder.git",
    {tag, "v1.3.2"}}},
  {dynamic_compile, ".*",
   {git, "https://github.com/okeuday/dynamic_compile.git",
    {tag, "v1.3.2"}}},
  {syslog, ".*",
   {git, "https://github.com/okeuday/erlang-syslog.git",
    {tag, "1.0.3"}}}]}.

{edoc_opts,
 [{preprocess, true}]}.
{erl_opts,
 [debug_info,
  nowarn_deprecated_type, % required for 17.0
  warnings_as_errors,
  strict_validation,
  warn_bif_clash,
  warn_deprecated_function,
  warn_export_all,
  warn_export_vars,
  warn_exported_vars,
  warn_obsolete_guard,
  warn_shadow_vars,
  warn_unused_import,
  warn_unused_function,
  warn_unused_record,
  warn_unused_vars]}.
{xref_checks,
 [exports_not_used,
  undefined_function_calls]}.
{xref_warnings, true}.
{cover_enabled, true}.
{cover_print_enabled, true}.
{cover_export_enabled, true}.

